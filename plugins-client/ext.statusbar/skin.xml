<?xml version='1.0'?>
<a:skin xmlns:a="http://ajax.org/2005/aml" xmlns="http://www.w3.org/1999/xhtml">
    <a:bar name="bar-status">
        <a:style><![CDATA[
            .bar-status {
                position : absolute;
                color: rgba(0, 0, 0, 0.4);
                padding: 2px;
                overflow: hidden;
                border: 1px solid transparent;

                border-radius: 6px;

                -webkit-transition: background-color 0.2s linear, border 0.2s linear, box-shadow 0.2s linear;
                -moz-transition: background-color 0.2s linear, border 0.2s linear, -moz-box-shadow 0.2s linear;

                background: transparent url('images/editor_bar_bg.png') 0px 30px repeat-x;
            }

            .bar-status:hover {
                border: 1px solid rgba(0, 0, 0, 0.12);

                -moz-box-shadow: inset 0px 1px 0px 0px #f5f5f5;
                box-shadow: inset 0px 1px 0px 0px #f5f5f5;

                background-color: transparent;
            }

            .dark .bar-status:hover {
                -moz-box-shadow: inset 0px 1px 0px 0px rgba(255, 255, 255, 0.1);
                box-shadow: inset 0px 1px 0px 0px rgba(255, 255, 255, 0.1);
            }
            
            .bar-status .lbl_row_col {
                text-align: center;
                color: rgba(0, 0, 0, 0.4);
            }

            .bar-status .label {
                color: rgba(0, 0, 0, 0.4);
                padding-left: 1px;
                overflow: visible;
            }

            .dark .bar-status .label {
                color: rgba(255, 255, 255, 0.8);
            }
            
            .mnuSbPrefs{
                border-radius : 6px;
                margin-top : -8px;
                margin-left : 1px;
            }
            
            .mnuSbPrefs .label {
                color : #f1f1f1;
            }
        ]]></a:style>

        <a:presentation>
            <a:main container=".">
                <div class="bar-status">
                </div>
            </a:main>
        </a:presentation>
    </a:bar>
    <a:button name="btn-expand-statusbar">
        <a:style><![CDATA[
            .btn-expand-statusbar {
                height              : 8px;
                width               : 10px;
                overflow            : hidden;
                cursor              : pointer;
                position            : relative;
                cursor              : default;
                -moz-user-select    : none;
                -khtml-user-select  : none;
                user-select         : none;
                background-position : 2px 7px;
                background-repeat   : no-repeat;

                border-radius: 3px;
            }

            .btn-expand-statusbarOver {
                background-position : 2px -19px;
            }

            .expanded .btn-expand-statusbar {
                background-position : -11px 7px;
            }

            .expanded .btn-expand-statusbarOver {
                background-position : -11px -19px;
            }

            .dark .btn-expand-statusbar {
                background-position : -28px 7px;
            }

            .dark .btn-expand-statusbarOver {
                background-position : -28px -19px;
            }

            .dark .expanded .btn-expand-statusbar {
                background-position : -42px -18px;
            }

            .dark .expanded .btn-expand-statusbarOver {
                background-position : -42px 7px;

            }
        ]]></a:style>

        <a:presentation>
            <a:main
              caption      = "text()"
              background = "."
              icon       = ".">
                <div class="btn-expand-statusbar"> </div>
            </a:main>
        </a:presentation>
    </a:button>
    <a:button name="btn-statusbar-icon">
        <a:style><![CDATA[
            .btn-statusbar-icon {
                height              : 23px;
                width               : 22px;
                overflow            : hidden;
                cursor              : pointer;
                position            : relative;
                cursor              : default;
                -moz-user-select    : none;
                -khtml-user-select  : none;
                user-select         : none;
                background-position : 0 0;
                background-repeat   : no-repeat;
            }
            .btn-statusbar-iconOver {
                background-position : 0 -23px;
            }

            .btn-statusbar-iconDown {
                background-position : 0 -46px;
            }

            .dark .btn-statusbar-icon {
                background-position : -22px 0;
            }

            .dark .btn-statusbar-iconOver {
                background-position : -22px -23px;
            }

            .dark .btn-statusbar-iconDown {
                background-position : -22px -46px;
            }
        ]]></a:style>

        <a:presentation>
            <a:main
              caption      = "text()"
              background = "."
              icon       = ".">
                <div class="btn-statusbar-icon"> </div>
            </a:main>
        </a:presentation>
    </a:button>
</a:skin>