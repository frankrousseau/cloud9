<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window id = "offlineNotifyDialog"
      title   = "No Local Runtime"
      center    = "true"
      icon      = ""
      buttons   = ""
      skin      = "bk-window2"
      kbclose   = "true"
      resizable = "false"
      height    = "180"
      width     = "360"
      draggable = "false"
      model     = "true">
        <a:vbox padding="10" edge="15" anchors="0 0 0 0">
            <a:text id="offlineNotifyText" class="tgDesc modal_text">
            	<h4 style="margin:0">Your local runtime has stopped.</h4>
                <p>To restore the IDE, type <em>c9 --restart</em> on the command line.</p>
            </a:text>
	    </a:vbox>
    </a:window>

    <a:bar id="barOfflineCover" class="bar-offline-cover" visible="false" zindex="100">
        <div class="offline-cover"></div>
        <div class="offline-indicator">Connection is lost! Trying to reach c9.io...</div>
    </a:bar>
</a:application>